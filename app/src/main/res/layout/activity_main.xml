<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4F3F3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/lblTitulo"
        android:layout_width="410dp"
        android:layout_height="131dp"
        android:background="#E3E9EA"
        android:padding="40dp"
        android:text="TP1 - Android"
        android:textAlignment="center"
        android:textColor="#788087"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnGeolocalizacao"
        android:layout_width="326dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#B6B9BA"
        android:text="Mostrar minha geolocalizaÃ§ao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTitulo" />

    <TextView
        android:id="@+id/lblLatitude"
        android:layout_width="89dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:text="Latitude"
        android:textAlignment="center"
        android:textColor="#252323"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGeolocalizacao" />

    <TextView
        android:id="@+id/lblLongitude"
        android:layout_width="93dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:text="Logitude"
        android:textAlignment="center"
        android:textColor="#252323"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblLatitude" />
</androidx.constraintlayout.widget.ConstraintLayout>